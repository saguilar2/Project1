<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#29832D"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/scoreLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/scoreTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/score_display"
            android:textColor="@color/white"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/highScoreTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/high_score"
            android:textColor="@color/white"
            android:textSize="26sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/livesLay"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:weightSum="3">

        <ImageView
            android:id="@+id/heart1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/live_selector"/>

        <ImageView
            android:id="@+id/heart2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/live_selector" />

        <ImageView
            android:id="@+id/heart3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/live_selector" />


    </LinearLayout>


    <GridLayout
        android:id="@+id/moleGridLay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:background="#34FFFFFF"
        android:columnCount="3"
        android:rowCount="3">

        <!-- Add 9 ImageButtons for the 3x3 grid -->
        <!-- In practice, you'd probably programmatically generate these ImageButtons in your Activity code -->
        <ImageButton
            android:id="@+id/window1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/window_selector"
            android:contentDescription="@string/window_context_desc" />

        <ImageButton
            android:id="@+id/window2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:clickable="true"
            android:contentDescription="@string/window_context_desc"
            android:focusable="true"
            android:background="@drawable/window_selector"/>
        <ImageButton
            android:id="@+id/window3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/window_context_desc"
            android:background="@drawable/window_selector" />

        <ImageButton
            android:id="@+id/window4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/window_context_desc"
            android:background="@drawable/window_selector" />

        <ImageButton
            android:id="@+id/window5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/window_context_desc"
            android:background="@drawable/window_selector" />

        <ImageButton
            android:id="@+id/window6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:clickable="true"
            android:contentDescription="@string/window_context_desc"
            android:focusable="true"
            android:background="@drawable/window_selector"/>

        <ImageButton
            android:id="@+id/window7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:contentDescription="@string/window_context_desc"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/window_selector" />

        <ImageButton
            android:id="@+id/window8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/window_context_desc"
            android:background="@drawable/window_selector"  />

        <ImageButton
            android:id="@+id/window9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:contentDescription="@string/window_context_desc"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/window_selector" />

    </GridLayout>
    <LinearLayout
        android:id="@+id/btn_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/stpBtn"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:text="@string/stop_btn"
            android:textSize="26sp" />

        <Button
            android:id="@+id/startbtn"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_marginLeft="70dp"
            android:text="@string/start_btn"
            android:textSize="26sp"/>

    </LinearLayout>


</LinearLayout>